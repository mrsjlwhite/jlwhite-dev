{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "jsx": "preserve",
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "noEmit": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "incremental": true,
        "baseUrl": ".",
        "paths": {
            "@/components/*": [
                "components/*",
            ],
            "@/imgs/*": [
                "public/imgs/*"
            ],
            "@/svgs/*": [
                "public/svgs/*"
            ],
            "@/lib/*": [
                "lib/*"
            ],
            "@/styles/*": [
                "styles/*"
            ],
            "@/data/*": [
                "core/data/*"
            ],
            "@/hooks/*": [
                "hooks/*"
            ],
            "@/interfaces/*": [
                "core/interfaces/*"
            ]
        },
        "plugins": [
            {
                "name": "next"
            }
        ],
        "strictNullChecks": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "app/**/*.ts",
        "app/**/*.tsx",
        "next-env.d.ts",
        ".next/types/**/*.ts"
    ]
}